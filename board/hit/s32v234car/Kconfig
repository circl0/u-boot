if TARGET_S32V234CAR

config SYS_BOARD
	string
	default "s32v234car"

config SYS_VENDOR
	string
	default "hit"

config SYS_CONFIG_NAME
	string
	default "s32v234car"

# S32V234EVB rev. A board with DDR3 has 4x512 MB DDR chips
# DDR0(512MB) and DDR1(512MB).
# S32V234EVB rev. D board with LPDDR2 has 2x256 MB DDR chips
# DDR0(256MB) and DDR1(256MB).
# U-boot uses only one DDR slot.

config SYS_DDR_SIZE
	int
	default 2147483648 if S32_DDR3
	default 268435456 if S32_LPDDR2

endif
